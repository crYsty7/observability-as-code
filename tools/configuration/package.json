{
  "name": "@ibm/stanctl-configuration",
  "version": "1.0.0",
  "description": "The Instana CLI for configuration package management",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "pkg": "pkg . --output dist/stanctl-configuration"
  },
  "bin": {
    "stanctl-configuration": "./dist/index.js"
  },
  "pkg": {
    "assets": [
      "dist/**/*.js",
      "node_modules/**/*"
    ],
    "targets": [
      "node16-macos",
      "node16-linux",
      "node16-win"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/instana/observability-as-code.git"
  },
  "keywords": [
    "instana",
    "cli",
    "observability",
    "as",
    "code",
    "configuration",
    "package"
  ],
  "author": "morningspace",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/instana/observability-as-code/issues"
  },
  "homepage": "https://github.com/instana/observability-as-code#readme",
  "dependencies": {
    "winston": "^3.13.0",
    "axios": "^1.7.2",
    "glob": "^10.4.1",
    "handlebars": "^4.7.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.2",
    "@types/winston": "^2.4.4",
    "@types/yargs": "^17.0.32"
  }
}
